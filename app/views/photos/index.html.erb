


<div class="fotorama"

data-allowfullscreen="native"
data-loop="true"
data-nav="thumbs"
data-hash="true"
data-fit="fit"
data-ratio="16/9"
data-transition="crossfade"
data-width="100%"
data-keyboard="true"
data-arrows="true"
data-click="true"
data-swipe="true"

>

<% @photos.each do |photo| %>

    <%= link_to( image_tag("https://s3-us-west-2.amazonaws.com/hg-englarged/#{photo.id_num.downcase}.jpg", class: 'category_image') , photo_url(photo), :data => { :caption => "##{photo.id_num} - #{photo.title}"}) %>


    <% end %>
</div>

<section class="direction_wrapper">
<h2>How To Purchase A Photograph</h2>
<p class='directions'>Locate the photo id in the bottom left corner of the image slide show.</p>
<p class='directions'>Enter that photo id (without the # sign) into the search bar at the top of the page.</p>
</section>
